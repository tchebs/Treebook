<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.mcgill.ecse321.treebook">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TreeBook"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="TreeBook"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddTreePage"
            android:label="Plant a Tree!"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateUserPage"
            android:label="Create a User!"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewTreesPage"
            android:label="@string/title_activity_view_trees_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditTreeActivity"
            android:label="@string/title_activity_edit_tree"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CutTreeActivity"
            android:label="@string/title_activity_cut_tree"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RequestTree"
            android:label="@string/title_activity_request_tree"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>